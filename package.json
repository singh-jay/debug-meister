{
  "name": "@singh-jay/debug-meister",
  "version": "0.1.5",
  "private": false,
  "type": "module",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    "import": "./dist/esm/index.js",
    "default": "./dist/cjs/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "rimraf dist && bun ./build.js",
    "rollup": "rimraf dist && rollup -c",
    "lint": "eslint --ext js,jsx src"
  },
  "dependencies": {
    "json-formatter-js": "^2.3.4"
  },
  "peerDependencies": {
    "react": "^17.0.2 || ^18",
    "react-dom": "^17.0.2 || ^18"
  },
  "devDependencies": {
    "@babel/core": "^7.22.8",
    "@babel/eslint-parser": "^7.22.7",
    "@babel/preset-env": "^7.22.7",
    "@rollup/plugin-commonjs": "^25.0.3",
    "@rollup/plugin-image": "^3.0.2",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.2",
    "@swc/core": "^1.3.70",
    "autoprefixer": "10.4.14",
    "esbuild": "^0.18.11",
    "esbuild-sass-plugin": "^2.10.0",
    "eslint": "^8.40.0",
    "eslint-config-next": "13.4.2",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "8.4.23",
    "prettier": "^3.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^3.26.3",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-polyfill-node": "^0.12.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-swc3": "^0.9.1",
    "rollup-plugin-visualizer": "^5.9.2",
    "tailwindcss": "3.3.2",
    "typescript": "^5.1.6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/singh-jay/debug-meister.git"
  },
  "keywords": [
    "react",
    "debug",
    "debugger",
    "storage",
    "library"
  ],
  "browserslist": [
    "> 1%",
    "IE 11"
  ],
  "author": "singh-jay",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/singh-jay/debug-meister/issues"
  },
  "homepage": "https://github.com/singh-jay/debug-meister#readme",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/singh-jay"
  },
  "eslintIgnore": [
    ".eslintrc.js",
    ".cache-loader",
    ".DS_Store",
    ".pnpm-debug.log",
    ".turbo",
    ".vscode/generated*",
    "/_work",
    "/actions-runner",
    "node_modules",
    "patches",
    "pnpm-lock.yaml",
    "*.cjs",
    "*.js",
    "*.d.ts",
    "*.d.ts.map",
    "build",
    "dist"
  ],
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "overrides": [
      {
        "files": [
          "src/**/*.js",
          "src/**/*.jsx"
        ],
        "parser": "@babel/eslint-parser",
        "parserOptions": {
          "requireConfigFile": false,
          "babelOptions": {
            "babelrc": false,
            "configFile": false,
            "presets": [
              "@babel/preset-env"
            ]
          }
        },
        "settings": {
          "react": {
            "version": "18"
          }
        },
        "extends": [
          "plugin:react/recommended",
          "plugin:react-hooks/recommended",
          "plugin:react/jsx-runtime",
          "prettier"
        ],
        "rules": {
          "react/prop-types": "off",
          "react/no-unescaped-entities": "off"
        }
      }
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": "latest",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "root": true
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "overrides": [
      {
        "files": [
          "**/*package.json"
        ],
        "options": {
          "trailingComma": "none"
        }
      }
    ]
  }
}
